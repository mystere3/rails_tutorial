<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th colspan-"2"></th>
  </tr>
  
  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.writer.try(:name) %></td>
<!--     <td><%= article.text %></td> -->
    <td><%= link_to 'Show', article_path(article), class: "my-button hvr-pulse-shrink" %></td>

  </tr>
  <% end %>
</table>